    <version>2.2.6.RELEASE</version>
    <relativePath/>
  </parent>

  <groupId>ru.saybert.hackaton</groupId>
  <artifactId>hackaton</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>hackaton</name>
